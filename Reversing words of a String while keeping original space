public class String_reversed_words_in_sentence {

	public static void main(String[] args) {
		
	
    String s="I am really happy today";
        
        String[]  words= s.split("\\s+");
        String rev="";
        
        for(int i=words.length-1; i>=0;i--)
        {
            rev=rev+words[i];
            rev=rev+" ";
        }
        
        rev.trim();
        
        System.out.println("The reversed sentence is:"+ rev);
        System.out.println("The given sentence is:"+ s);
    }
	


}
